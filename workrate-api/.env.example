# ── Database ──────────────────────────────────────────────────────────────
DATABASE_URL=postgresql://workrate:yourpassword@localhost:5432/workrate

# ── Auth ───────────────────────────────────────────────────────────────────
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_ACCESS_SECRET=replace_with_64_byte_random_hex
JWT_REFRESH_SECRET=replace_with_different_64_byte_random_hex

JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=30d

# ── Server ─────────────────────────────────────────────────────────────────
PORT=3001
NODE_ENV=development

# ── CORS origins (comma-separated) ─────────────────────────────────────────
# Add your dashboard URL and chrome-extension:// origin
ALLOWED_ORIGINS=http://localhost:5173,https://workrate.io,chrome-extension://YOUR_EXTENSION_ID

# ── Rate limiting ──────────────────────────────────────────────────────────
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100
